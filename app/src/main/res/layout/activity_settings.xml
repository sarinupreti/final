<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="16"
    tools:context="com.example.sarin.guff.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_image"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:src="@drawable/avatar_default"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="40dp" />



    <TextView
        android:id="@+id/setting_displayName"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom|center"
        android:text="Display Name"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/setting_displayId"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Varsity Id"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/setting_status"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingTop="15dp"
        android:text="@string/default_status"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/setting_changeImageButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="CHANGE IMAGE"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/setting_changeStatusButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="change status"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
