<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txtWhite"
    android:id="@+id/myLayout_status"
    tools:context="com.example.sarin.guff.ChangeStatus">

    <include layout="@layout/all_toolbar" android:id="@+id/toolbarId_status" />


    <Button
        android:id="@+id/ch_statusButton"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:background="@drawable/button_design_1"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"

        android:text="Change"
        android:textColor="@color/txtWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch_status" />

    <TextView
        android:id="@+id/change_pass"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:text="Change Status"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarId_status" />

    <EditText
        android:id="@+id/ch_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input"
        android:hint="Write Your Status"
        android:inputType="text"
        android:maxLength="100"
        android:paddingBottom="12dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_pass" />

