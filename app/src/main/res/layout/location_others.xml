<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout_pic"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:src="@drawable/avatar_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/location_others"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_margin="16dp"
        android:background="@drawable/image_border"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/message_profile_layout_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_time_for_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginVertical="5dp"
        android:text="Mar 28, 2018  8:08:35 AM"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_Image_layout" />

</android.support.constraint.ConstraintLayout>